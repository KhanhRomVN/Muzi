<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cài đặt"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp" />

        <!-- Profile Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <androidx.cardview.widget.CardView
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cardCornerRadius="36dp"
                app:cardElevation="0dp">
                <ImageView
                    android:id="@+id/ivProfileAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/sym_def_app_icon"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">
                <TextView
                    android:id="@+id/tvProfileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Người dùng Muzi"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/tvProfileEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="user@email.com"
                    android:textSize="14sp"
                    android:textColor="#757575" />
            </LinearLayout>
            
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_edit"
                app:tint="@color/primary" />
        </LinearLayout>

        <!-- General Settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tài khoản &amp; Cài đặt"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/btnChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Đổi mật khẩu"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:paddingEnd="16dp"
                    android:background="?attr/selectableItemBackground" />

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F5F5F5" />

                <TextView
                    android:id="@+id/btnLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Ngôn ngữ (Tiếng Việt)"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:paddingEnd="16dp"
                    android:background="?attr/selectableItemBackground" />

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F5F5F5" />

                <TextView
                    android:id="@+id/btnNotification"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Thông báo"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:paddingEnd="16dp"
                    android:background="?attr/selectableItemBackground" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Support Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hỗ trợ"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/btnHelpCenter"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Trung tâm trợ giúp"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:paddingEnd="16dp"
                    android:background="?attr/selectableItemBackground" />

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F5F5F5" />

                <TextView
                    android:id="@+id/btnTerms"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Điều khoản &amp; Chính sách"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:paddingEnd="16dp"
                    android:background="?attr/selectableItemBackground" />
                
                 <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F5F5F5" />

                <TextView
                    android:id="@+id/btnAbout"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Về Muzi"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:paddingEnd="16dp"
                    android:background="?attr/selectableItemBackground" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Logout Button -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Đăng xuất"
            android:layout_marginTop="32dp"
            android:backgroundTint="#FFEBEE"
            android:textColor="#D32F2F"
            app:cornerRadius="12dp"
            android:textSize="16sp"
            android:textStyle="bold"
            stateListAnimator="@null"
            android:elevation="0dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phiên bản 1.0.0"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#9E9E9E"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
