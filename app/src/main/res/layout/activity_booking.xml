<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvBookingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác nhận đặt phòng"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvBookingTitle"
        app:layout_constraintBottom_toTopOf="@id/btnConfirmBooking">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Hotel Info Card (Flattened) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">
                    <ImageView
                        android:id="@+id/ivConfirmImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/ic_menu_gallery" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">
                    <TextView
                        android:id="@+id/tvConfirmHotel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Khách sạn Hoàng Gia"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/black" />
                    <TextView
                        android:id="@+id/tvConfirmAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Việt Nam, Hà Nội"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginTop="4dp" />
                    <TextView
                        android:id="@+id/tvConfirmRoomPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2.500.000 VNĐ / đêm"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/primary"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp" />

            <!-- Stay Details -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chi tiết lưu trú"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="24dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nhận phòng"
                        android:textSize="13sp"
                        android:textColor="#757575" />
                    <TextView
                        android:id="@+id/tvCheckInDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20/01/2026"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="2dp" />
                    <TextView
                        android:id="@+id/tvCheckInTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Từ 14:00"
                        android:textSize="13sp"
                        android:textColor="#757575" />
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trả phòng"
                        android:textSize="13sp"
                        android:textColor="#757575" />
                    <TextView
                        android:id="@+id/tvCheckOutDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22/01/2026"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="2dp" />
                    <TextView
                        android:id="@+id/tvCheckOutTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trước 12:00"
                        android:textSize="13sp"
                        android:textColor="#757575" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"
                android:layout_marginBottom="24dp" />

            <!-- Payment Method -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phương thức thanh toán"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <!-- Payment Options List -->
            <RadioGroup
                android:id="@+id/rgPaymentMethods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- MoMo -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp">
                    <ImageView
                        android:id="@+id/ivMomo"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@android:drawable/ic_menu_agenda" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/ivMomo"
                        android:layout_toStartOf="@+id/rbMomo"
                        android:layout_marginStart="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ví điện tử MoMo"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thanh toán nhanh qua ứng dụng MoMo"
                            android:textSize="12sp"
                            android:textColor="#757575" />
                    </LinearLayout>
                    <RadioButton
                        android:id="@+id/rbMomo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:checked="true" />
                </RelativeLayout>

                <!-- ZaloPay -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp">
                    <ImageView
                        android:id="@+id/ivZalopay"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@android:drawable/ic_menu_agenda" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/ivZalopay"
                        android:layout_toStartOf="@+id/rbZalopay"
                        android:layout_marginStart="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ZaloPay"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ưu đãi hoàn tiền khi qua ZaloPay"
                            android:textSize="12sp"
                            android:textColor="#757575" />
                    </LinearLayout>
                    <RadioButton
                        android:id="@+id/rbZalopay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>

                <!-- Credit Card -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp">
                    <ImageView
                        android:id="@+id/ivVisa"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@android:drawable/ic_menu_agenda" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/ivVisa"
                        android:layout_toStartOf="@+id/rbVisa"
                        android:layout_marginStart="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thẻ Tín dụng / Ghi nợ"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hỗ trợ Visa, Mastercard, JCB"
                            android:textSize="12sp"
                            android:textColor="#757575" />
                    </LinearLayout>
                    <RadioButton
                        android:id="@+id/rbVisa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>

                <!-- Cash -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp">
                    <ImageView
                        android:id="@+id/ivCash"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@android:drawable/ic_menu_agenda" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/ivCash"
                        android:layout_toStartOf="@+id/rbCash"
                        android:layout_marginStart="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thanh toán tại quầy"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thanh toán khi nhận phòng"
                            android:textSize="12sp"
                            android:textColor="#757575" />
                    </LinearLayout>
                    <RadioButton
                        android:id="@+id/rbCash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp" />

            <!-- Payment Breakdown -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chi tiết thanh toán"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Giá phòng (2 đêm)"
                        android:textSize="14sp"
                        android:textColor="#757575" />
                    <TextView
                        android:id="@+id/tvBasePrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.000.000 VNĐ"
                        android:textSize="15sp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Thuế &amp; Phí"
                        android:textSize="14sp"
                        android:textColor="#757575" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="150.000 VNĐ"
                        android:textSize="15sp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tổng thanh toán"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tvConfirmPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.150.000 VNĐ"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/primary" />
                </LinearLayout>
            </LinearLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btnConfirmBooking"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Thanh toán"
        android:backgroundTint="@color/primary"
        android:textColor="@android:color/white"
        android:layout_margin="16dp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
