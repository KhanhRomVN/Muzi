<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Muzi" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <item name="android:statusBarColor">@color/primary</item>
        
        <item name="android:windowBackground">@color/secondary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
    </style>

    <style name="Theme.Muzi" parent="Base.Theme.Muzi" />

    <style name="BottomNavThemeOverlay">
        <item name="colorSecondaryContainer">@android:color/transparent</item>
        <item name="colorOnSecondaryContainer">@color/primary</item>
    </style>

    <style name="BottomNavLabelStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="BottomNavLabelActiveStyle" parent="BottomNavLabelStyle">
        <item name="android:textStyle">bold</item>
    </style>
</resources>
